    @foreach (var job in Model.JobField)
    {
        <tbody>
            <tr>
                <td>Name</td>
                <td>@job.Name</td>
            </tr>
            <tr>
                <td>Employer</td>
                <td>@job.Employer</td>
            </tr>
            <tr>
                <td>Location</td>
                <td>@job.Location</td>
            </tr>
            <tr>
                <td>Skill</td>
                <td>@job.CoreCompetency</td>
            </tr>
            <tr>
                <td>Position Type</td>
                <td>@job.PositionType</td>
            </tr>
        </tbody>

    }



</table>